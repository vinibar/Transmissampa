<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.biuti.transmissampa" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TransmissampaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.StartActivity"
            android:label="@string/title_activity_start"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName=".controller.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.StartActivity" />
        </activity>
        <activity
            android:name=".controller.LogInActivity"
            android:label="@string/title_activity_log_in"
            android:parentActivityName=".controller.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.biuti.transmissampa.controller.StartActivity" />
        </activity>
        <activity
            android:name=".controller.AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".controller.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.biuti.transmissampa.controller.MainActivity" />
        </activity>
    </application>

</manifest>
